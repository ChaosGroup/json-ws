<% // Code Generator utilities

function mapJavaType(jsType, isArray) {
	var returnType = '';
	switch (jsType) {
		case '*':
		case 'any':
			returnType = 'JsonElement';
			break;

		case 'int':
		case 'integer':
			returnType = 'Long';
			break;

		case 'date':
		case 'time':
			returnType = 'Date';
			break;

		case 'number':
		case 'float':
		case 'double':
			returnType = 'Double';
			break;

		case 'bool':
		case 'boolean':
			returnType = 'Boolean';
			break;

		case 'object':
		case 'json':
			returnType = 'JsonObject';
			break;

		case 'string':
			returnType = 'String';
			break;

		case 'url':
			returnType = 'URL';
			break;

		case 'buffer':
		case 'binary':
			returnType = 'byte[]';
			break;

		case undefined:
			returnType = 'void';
			break;

		default:
			returnType = metadata.types[jsType] ? jsType : ('/*' + jsType + '*/Object');
	}
	return returnType + (isArray ? '[]' : '');
}

function camelCase(literal) {
	return literal.substr(0, 1).toUpperCase() + literal.substr(1);
}

